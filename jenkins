pipeline {
    agent any

    stages {
        stage('Clone') {
            steps {
                echo 'Cloning the repo...'
                // Jenkins auto clones the repo for Pipeline jobs with SCM, skip this if using Jenkinsfile from repo
            }
        }

        stage('Build') {
            steps {
                echo 'Building the project...'
                sh 'echo Simulating build step'
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                sh 'echo Simulating test step'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying the project...'
                sh 'echo Simulating deployment step'
            }
        }
    }
}
